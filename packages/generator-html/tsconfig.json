{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "nodenext",
    "jsx": "react",
    "allowJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "lib": [
      "es2020"
    ]
  },
  "include": [
    "src/**/*",
    "src/renderer.cts",
  ],
  "exclude": [
    "artifacts/**/*",
    "dist/**/*",
    "public/**/*",
    "node_modules"
  ]
}