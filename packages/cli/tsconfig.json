{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es2020",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "lib": [
      "ES2019"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "types/*.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}